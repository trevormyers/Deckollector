@page
@model Deckollector.Pages.Wishlists.EditModel

@{
    ViewData["Title"] = "Edit Wishlist";
}

<div class="wrapper">
    <h1>Edit Wishlist</h1>

    <h4>Wishlist</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Wishlist.WishlistID" />
                <div class="form-group">
                    <label asp-for="Wishlist.WishlistName" class="control-label"></label>
                    <input asp-for="Wishlist.WishlistName" class="form-control" />
                    <span asp-validation-for="Wishlist.WishlistName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Wishlist.WishlistDescription" class="control-label"></label>
                    <input asp-for="Wishlist.WishlistDescription" class="form-control" />
                    <span asp-validation-for="Wishlist.WishlistDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index" class="custom-link">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
